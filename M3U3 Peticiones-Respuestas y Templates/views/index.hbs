        </div>
    </div>
    <div class="row my-3">
        <div id="novedades" class="col-md-5 offset-md-2 py-3">
            <h2>Novedades</h2>
            <ul class="lista-novedades">
                {{#each novedades}}
                <li>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#Modal{{id}}"><img
                            src="images/novedades01.jpg" /> {{titulo}}  </a>
                </li>
                {{/each}}
            </ul>
        </div> <!--Cierra Novedades -->
        <!-- Modal -->
        {{#each novedades}}
